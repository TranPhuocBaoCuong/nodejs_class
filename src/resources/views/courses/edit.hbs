<div class="mt-4">
	<h2>Cập nhật khóa học</h2>
	<form method="POST" action="/courses/{{course._id}}?_method=PUT">
		<div class="form-group">
			<label for="name">Tên khóa học</label>
			<input type="text" name="name" class="form-control" id="name" value="{{course.name}}">
		</div>
		<div class="form-group">
			<label for="description">Mô tả khóa học</label>
			<textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
		</div>
		<div class="form-group">
			<label for="video-id">Video ID</label>
			<input type="text" name="videoId" class="form-control" id="video-id" value="{{course.videoId}}">
		</div>
		<button type="submit" class="btn btn-primary">Lưu thay đổi</button>
	</form>
</div>